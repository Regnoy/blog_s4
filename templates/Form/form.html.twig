{% block form_row %}
    {% set class = '' %}
    {% if form.vars.attr.class is defined %}
        {% set class = form.vars.attr.class %}
    {% endif %}
    <div class="form-row form-row-{{ form.vars.name|lower|replace({'_' : '-'}) }} type-{{ form.vars.block_prefixes.2 }}">
        {{ form_label(form) }}
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>
{% endblock form_row %}

