{% extends 'page_default.html.twig' %}

{% block main %}
  <div class="block block--term-view">
    <div class="block-content">
      {% set termTrans = 'term.' ~ term.machineName  %}
      <h2 class="field field-name">{{ termTrans | trans }}</h2>
      {#<div class="field field-description">{{ term.description }}</div>#}
      <div class="field field-pages">
        <div class="list list--page-list">
          {% for page in pages %}
            <div class="list-item">
              {{  include('Page/ViewMode/teaser.html.twig', { 'item' : page } )  }}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

{% endblock %}